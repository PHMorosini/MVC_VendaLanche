@model LancheListViewModel
<div class="container">
    <div class="row">
        <!-- Barra lateral -->
        <div class="col-md-2">
            <div class="sidebar">
                <h2>Filtros</h2>
                <!-- Conteúdo da barra lateral -->
                @await Component.InvokeAsync("CategoriaMenu")
            </div>
        </div>

        <!-- Conteúdo principal -->
        <div class="row col-md-8 ">
            <div class="main-content">
                <Div>
                    <h2>@Model.CategoriaAtual</h2>
                </Div>
                <!-- Loop para exibir os lanches -->
                <div class="container">
                    <div class="row">
                        @foreach (var lanche in Model.Lanches)
                        {
                            <div class="col-4">
                                <partial name="_LanchesResumo" for="@lanche" />
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="sidebar align-content-end">
                <h2>No carrinho</h2>
                <!-- Conteúdo da barra lateral -->
                @await Component.InvokeAsync("CarrinhoCompraSideBar")
            </div>
        </div>
    </div>
</div>
