@model CategoriasListViewModel
<div class="dropdown">

    <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false"> Lanches </a>
    <ul class="dropdown-menu"
    @foreach (var categoria in Model.Categorias)
    {
     <li>
     <a class="dropdown-item" asp-controller="CategoriaListController" asp-action="List" style="color:black" asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome></a>
    </li>
    }
    </ul>

</div>

