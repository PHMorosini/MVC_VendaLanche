<div>
    <ul class="list-group" style="padding-left: 0;">
        <li class="list-group-item"><b>Categorias</b></li>
        @foreach (var categoria in Model)
        {
            <li class="list-group-item">
                <a class="button" asp-controller="Lanche" asp-action="List" style="color:black; list-style: none;" asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="list-group-item">
            <a class="button" asp-controller="Lanche" asp-action="List" asp-route-categoria="" style="color:black">Todos os lanches</a>
        </li>
    </ul>
</div>




